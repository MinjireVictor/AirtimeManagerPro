<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="2dp"
                />
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"
                />
            <size
                android:height="44dp"
                android:width="250dp"
                />
            <solid
                android:color="#66ffffff"/>

        </shape>

    </item>
    <item android:state_pressed="false">
        <shape>
            <corners
                android:radius="2dp"
                />
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"
                />
            <size
                android:height="44dp"
                android:width="250dp"
                />
            <solid
                android:color="#ffffff"/>
        </shape>

    </item>

</selector>