    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="SELECT YOUR TARIFF"
        android:textColor="#000000"
        android:textSize="15sp" />

    <View
        android:id="@+id/View2"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#c0c0c0" />

    <Button
        android:id="@+id/hollaBundles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_bg"

        android:text="holla &amp; freedom bundles"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/hollaPremium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="niaje bunlde"
        android:layout_below="@+id/hollaBundles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/tujuane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:layout_below="@+id/hollaPremium"
        android:background="@drawable/button_bg"
        android:text="tujuane"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/call_bila_worries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call bila worries"
        android:layout_below="@+id/tujuane"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_bg"
        android:textStyle="bold"/>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"

        android:layout_below="@+id/call_bila_worries"
        android:layout_marginTop="30dp"
        ads:adUnitId="ca-app-pub-1383320353699684/1879548255">
    </com.google.android.gms.ads.AdView>


