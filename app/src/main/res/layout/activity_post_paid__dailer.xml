<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".PostPaid_Dailer">

    <EditText
        android:id="@+id/screen"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:enabled="false"
        android:ems="10"
        android:padding="8dp"
        android:background="#eeeeee"
        android:inputType="number"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screen"
        android:id="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:weightSum="6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/dailer_buttons_bg"
            android:gravity="center"
            android:textSize="30dp"

            android:text="1" />

        <TextView
            android:id="@+id/tv2"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="30dp"



            android:background="@drawable/dailer_buttons_bg"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:id="@+id/tv3"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="30dp"
            android:background="@drawable/dailer_buttons_bg"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="20dp"
        android:weightSum="6"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv4"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="30dp"
            android:background="@drawable/dailer_buttons_bg"
            android:gravity="center"
            android:text="4" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="center"
            android:textSize="30dp"
            android:background="@drawable/dailer_buttons_bg"
            android:text="5" />

        <TextView
            android:id="@+id/tv6"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="30dp"
            android:background="@drawable/dailer_buttons_bg"
            android:gravity="center"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:weightSum="6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:textSize="30dp"
            android:background="@drawable/dailer_buttons_bg"
            android:gravity="center"
            android:text="7" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="30dp"
            android:clickable="true"
            android:background="@drawable/dailer_buttons_bg"
            android:gravity="center"
            android:text="8" />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:textSize="30dp"
            android:background="@drawable/dailer_buttons_bg"
            android:gravity="center"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/TvStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:textSize="30dp"
            android:background="@drawable/dailer_buttons_bg"
            android:gravity="center"
            android:text="*" />

        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="30dp"
            android:clickable="true"
            android:background="@drawable/dailer_buttons_bg"
            android:gravity="center"

            android:text="0" />

        <TextView
            android:id="@+id/tvHash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="30dp"
            android:clickable="true"
            android:background="@drawable/dailer_buttons_bg"
            android:gravity="center"
            android:text="#" />
    </LinearLayout>

    <ImageView
        android:id="@+id/contactsImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        app:srcCompat="@drawable/contacts" />

    <ImageView
        android:id="@+id/deleteImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/clear"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/contactsImageView"
        android:layout_marginBottom="10dp"
        android:background="#c0c0c0"
        android:id="@+id/View2"

        />

    <ImageView
        android:id="@+id/call_ImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        app:srcCompat="@drawable/call1" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactsImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-16dp"
        android:textColor="#000000"
        android:text="Contacts" />


</RelativeLayout>